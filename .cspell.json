{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en-GB",
  "overrides": [
    {
      "filename": "{*.cmd,*.cs,*.csproj}",
      "language": "en-US"
    },
    {
      "filename": "{.cspell.json,*.svg}",
      "enabled": false
    },
    {
      "filename": "*.csx",
      "words": [
        "appsettings",
        "sonarscanner",
        "analyzers",
        "owasp"
      ]
    }
  ],
  "ignorePaths": [
    ".gitattributes",
    ".gitignore",
    ".editorconfig",
    "*.{png,jpg,pdf}",
    "**/*.ruleset",
    "**/bin/**",
    "**/obj/**",
    "**/TestResults/**",
    "**/launchSettings.json"
  ],
  "words": [
    "cref",
    "msbuild",
    "analyzer",
    "analizers",
    "ruleset",
    "netcoreapp",
    "netstandard",
    "stylecop",
    "sonarlint",
    "nuget",
    "nupkg",
    "snupkg",
    "menees",
    "codecov",
    "LINQ",
    "NOLOGO",

    "arity",
    "setx",
    "rosen",
    "kolev",
    "sonarqube",
    "cobertura",
    "newtonsoft",
    "jabba",
    "dotnetsay",
    "USERPROFILE"
  ]
}